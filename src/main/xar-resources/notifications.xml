<notifications>
    <method prefix="notification" uri="http://exist-db.org/apps/monex/notification" at="modules/notification.xql"><!-- Provide mail server settings here if you want to receive alerts -->
        <properties>
            <property name="mail.debug" value="true"/>
            <property name="mail.smtp.starttls.enable" value="true"/>
            <property name="mail.smtp.auth" value="true"/>
            <property name="mail.smtp.port" value="587"/>
            <property name="mail.smtp.host" value="smtp.gmail.com"/>
            <property name="mail.smtp.user" value="alerts"/>
            <property name="mail.smtp.password" value="1234567"/>
        </properties>
        <!-- One or more accounts to send alerts to -->
        <!--
        <receiver address="alert@email.com" name="John Doe">
            <watching>instance</watching>
        </receiver>
        -->
    </method>
</notifications>
